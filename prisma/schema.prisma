generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  name     String?
  email    String  @unique
  password String
  jobs     Job[]
}

model Job {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  description String?
  fileName    String
  filePath    String
  status      JobStatus @default(PENDING)
  result      String?
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

enum JobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

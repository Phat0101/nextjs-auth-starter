generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  description String?
  fileName    String
  fileContent Bytes
  fileSize    Int
  mimeType    String
  status      JobStatus @default(PENDING)
  result      String?
}

enum JobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}
